{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
  },
  "include": [
    "src",
    "../estimtest-utils"
  ],
  "exclude": [
    "node_modules"
  ]
}